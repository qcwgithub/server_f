    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\start.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                "--inspect",
                "purpose=Test",
                "ids=[1,2,3,4,11,12,13,101]"
            ],
            "preLaunchTask": "tsc: build",
            "console": "externalTerminal",
            "sourceMaps": true,
            "smartStep": true,
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}